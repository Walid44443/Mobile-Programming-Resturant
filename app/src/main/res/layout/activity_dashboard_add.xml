<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="walid44443.fb.resturantfirsttry.DashboardAddActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/resturant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Resturant Name" />

    <EditText
        android:id="@+id/resturant_ico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Resturant ico" />

    <EditText
        android:id="@+id/resturant_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Resturant phone" />

    <Button
        android:id="@+id/choose_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click here to choose location" />

    <EditText
        android:id="@+id/x_axis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/y_axis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <Button
        android:id="@+id/insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="insert" />


</LinearLayout>
